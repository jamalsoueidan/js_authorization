<%= error_messages_for :user %>

<% js_form_for :user, @user, :show_requirements => true do |f| %>
	<%= f.text_field :email %>
	<%= f.text_field :name %>
	<%= f.password_field :password %>
	<%= f.password_field :password_confirmation %>
	<%= f.terms_of_service "Ved at trykke på Opret mig så acceptere du " + link_popup("betingelser", :action => "terms") %>
	<%= f.submit_or_cancel :submit => {:label => "Opret mig"}, :cancel => {:label => "Annullere", :url => {:action => :login}} %>
<% end %>
